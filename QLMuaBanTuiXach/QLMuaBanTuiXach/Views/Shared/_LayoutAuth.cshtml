@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    var nguoiDung = Session["TaiKhoan"] as QLMuaBanTuiXach.Models.NguoiDung;
    if (nguoiDung == null)
    {
        TempData["AuthMessage"] = "Vui lòng đăng nhập để truy cập trang này.";
        <script>window.location.href = '@Url.Action("Index", "Home", new { login = true })';</script>
        return; 
    }
}
<div class="container account-layout my-4 my-md-5">
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Tài Khoản Của Tôi</h5>
                </div>
                <div class="list-group list-group-flush account-menu-bs">
                    <a href="@Url.Action("ThongTinCaNhan", "NguoiDung")" class="list-group-item list-group-item-action d-flex align-items-center @(ViewBag.ActiveMenu == "ThongTin" ? "active" : "")">
                        <i class="fa-solid fa-user-pen fa-fw me-3"></i> Thông tin cá nhân
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center @(ViewBag.ActiveMenu == "DonHang" ? "active" : "")">
                        <i class="fa-solid fa-box-archive fa-fw me-3"></i> Quản lý đơn hàng
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center @(ViewBag.ActiveMenu == "DiaChi" ? "active" : "")">
                        <i class="fa-solid fa-location-dot fa-fw me-3"></i> Sổ địa chỉ
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center @(ViewBag.ActiveMenu == "YeuThich" ? "active" : "")">
                        <i class="fa-solid fa-heart fa-fw me-3"></i> Sản phẩm yêu thích
                    </a>
                    <a href="@Url.Action("DoiMatKhau", "NguoiDung")" class="list-group-item list-group-item-action d-flex align-items-center @(ViewBag.ActiveMenu == "MatKhau" ? "active" : "")">
                        <i class="fa-solid fa-key fa-fw me-3"></i> Đổi mật khẩu
                    </a>
                    <a href="@Url.Action("DangXuat", "NguoiDung")" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="fa-solid fa-arrow-right-from-bracket fa-fw me-3"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    @RenderSection("scripts", required: false)
    <style>
        .account-menu-bs .list-group-item.active {
            color: #b98d5c; /* Màu chữ chính */
            background-color: #f0e9e1; /* Màu nền nhạt */
            border-color: #e9e0d7; /* Màu viền */
            font-weight: 500;
        }

            .account-menu-bs .list-group-item.active i {
                color: #b98d5c; /* Màu icon */
            }

        .fa-fw {
            text-align: center;
        }
        /* Đảm bảo icon căn giữa */
    </style>
}



