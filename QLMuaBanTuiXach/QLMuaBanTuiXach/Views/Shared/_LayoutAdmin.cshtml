@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Trang Quản Trị</title>
    <link href="~/Content/boostrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin_style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" xintegrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Trang Quản Trị</h3>
            </div>
            <ul class="list-unstyled components">
                <li><a href="@Url.Action("Index", "AdminSanPham")"><i class="fa-solid fa-box me-2"></i>Quản lý Sản phẩm</a></li>
                <li><a href="#"><i class="fa-solid fa-receipt me-2"></i>Quản lý Đơn hàng</a></li>
                <li><a href="#"><i class="fa-solid fa-users me-2"></i>Quản lý Người dùng</a></li>
                <li><a href="@Url.Action("Index", "Home")"><i class="fa-solid fa-house me-2"></i>Về trang chủ</a></li>
                @if (Session["TaiKhoan"] != null)
                {
                    <li><a href="@Url.Action("DangXuat", "NguoiDung")"><i class="fa-solid fa-arrow-right-from-bracket me-2"></i>Đăng xuất</a></li>
                }
            </ul>
        </nav>
        <!-- Page Content -->
        @* Thêm class 'p-4' để tạo khoảng cách padding cho nội dung *@
        <div id="content" class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>
    @* Đảm bảo các file JS tồn tại đúng đường dẫn *@
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @* Thêm RenderSection để các View con có thể thêm script nếu cần *@
    @RenderSection("scripts", required: false)
</body>
</html>

